@model Company

<h2>Firme</h2>
<table class="table table-striped table-bordered table-sm">
    <tr data-toggle="collapse" id="xman" data-target="@("#" + Model.Id.ToString())" style="cursor:pointer;">
        <td class="text-center"><b>@Model.Name</b></td>
        @if (Model.Id.Equals(@ViewData["id"]))
        {
            <td class="text-center">
                <a asp-controller="Manage" asp-action="IndexCompany" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">✎</a>
            </td>
        }
<tr></tr>
        <tr class="bg-light">
            <td colspan="8" style="padding:0;margin:0;">
                <div id="@Model.Id" class="subRow collapse">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="column1">
                                <img src=@Model.LogoLink class="imageCell" height="150" width="170" />

                            </div>
                            <div class="column">
                                <div>
                                    <h4><b><center>@Model.Name</center></b></h4>
                                </div>
                                <h1></h1>
                                <div>
                                    <h4>Vrsta poslovanja: <b>@Model.BussinesType</b></h4>
                                </div>
                                <div>
                                    <h4>Web adresa: <b>@Model.WebAddress</b></h4>
                                </div>
                                <div>
                                    <h4>Mail: <b>@Model.Email</b></h4>
                                </div>
                                <div>
                                    <h4>Broj telefona: <b>@Model.PhoneNumber</b></h4>
                                </div>
                                <div>
                                    <h4>Adresa:</h4>
                                    <h4><b>    @Model.Address, @Model.City, Hrvatska</b></h4>
                                </div>
                            </div>
                            <div class="column2">
                                <div>
                                    <h5><b><center>O firmi:</center></b></h5>
                                </div>
                                <div>
                                    @Model.About
                                </div>
                                <div>
                                    <h4>Broj zaposlenih: <b>@Model.NumberOfEmployees</b></h4>
                                </div>

                                <div>
                                    <h4>Utemeljeno: <b>@Model.Established.ToString("dd/MM/yyyy")</b></h4>
                                </div>
                                <div>
                                    <a asp-controller="Ad" asp-action="CompanyAds" asp-route-id="@Model.Id">Pogledaj firmine oglase</a>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </td>
        </tr>

        </tr>
</table>

<style>
    #xman {
        background-color: white;
        color: black;
        cursor: pointer;
        padding: 30px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
    }

        .active, #xman:hover {
            background-color: #c5c5c5;
        }

    #cman {
        padding: 0 14px;
        display: none;
        overflow: hidden;
        background-color: #ff0000;
    }

    #da {
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
</style>

<style>
    * {
        box-sizing: border-box;
    }

    /* Create two equal columns that floats next to each other */
    .column {
        float: left;
        width: 30%;
        padding: 10px;
        height: 280px; /* Should be removed. Only for demonstration */
    }

    .column1 {
        float: left;
        width: 20%;
        padding: 30px;
        height: 280px; /* Should be removed. Only for demonstration */
    }

    .column2 {
        float: left;
        width: 40%;
        padding: 30px;
        height: 280px; /* Should be removed. Only for demonstration */
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
</style>
