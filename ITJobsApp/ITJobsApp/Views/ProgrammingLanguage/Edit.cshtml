@model EditPLViewModel
<form asp-action="Update" asp-route-id="@Model.PL.Id" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (@ViewData["Success"] != null)
    {
        <div class="alert alert-success">Programski jezik spremljen</div>
    }
    <a asp-action="Index" title="Povratak na prethodnu stranu">
        <i class="arrow-left"></i>
    </a>
    <h3>Izmjeni programski jezik</h3>
    <div class="form-group">
        <label asp-for="PL.Name">Ime</label>
        <input type="text" class="form-control" asp-for="PL.Name" placeholder="Ime programskog jezika">
    </div>


    <button type="submit" class="btn btn-primary">Spremi</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Odustani</button>
    </a>


</form>
