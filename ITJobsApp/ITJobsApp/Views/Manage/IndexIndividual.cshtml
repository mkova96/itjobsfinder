@model IndexIndividualViewModel
    <h1>Uredi profil</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" id="da" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" id="da" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth">Datum rođenja</label>
                <input asp-for="DateOfBirth" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="da" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" id="da" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="City">Grad</label>
                <input asp-for="City" id="da" class="form-control" />
            </div>
            <div class="form-group">
                <b>Hrvatska</b>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Broj telefona</label>
                <input asp-for="PhoneNumber" id="da" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="About">Kratka biografija</label>
                <textarea asp-for="About" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Skills">Vještine  </label>
                <textarea asp-for="Skills" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Spremi</button>
        </form>
    </div>
</div>

@section Scripts {
@await Html.PartialAsync("_ValidationScriptsPartial")

}

<style>
    #da {
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
</style>

